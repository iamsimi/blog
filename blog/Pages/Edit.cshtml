@page
@model blog.Pages.EditModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


<div class="row">
    <div class="col-md-12">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Article.Title"></label>
                    <input asp-for="Article.Title" class="form-control" />
                    <span asp-validation-for="Article.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.Tags"></label>
                    <input asp-for="Article.Tags" class="form-control" />
                    <span asp-validation-for="Article.Tags" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Article.Content"></label>
                    <textarea asp-for="Article.Content" class="form-control" 
                    placeholder="start with summary about 300 Characters in plain text then write content in using html tags and keep your format" rows="50" ></textarea>
                    <span asp-validation-for="Article.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default">Save</button>
                </div>
            </form>
        </section>
    </div>
</div>



